# function to create acronym
def fxn(stng):
   
    # add first letter
    oupt = stng[0]
     
    # iterate over string
    for i in range(1, len(stng)):
        if stng[i-1] == ' ':
           
            # add letter next to space
            oupt += stng[i]
             
    # uppercase oupt
    oupt = oupt.upper()
    return oupt
 
 
# input string
inpt1 = "National Aeronautics Space Administration"
 
# output acronym
print(fxn(inpt1))
 
# input string
inpt1 = "Board Cricket Council India"
 
# output acronym
print(fxn(inpt1))
 
# input string
inpt1 = "Telangana state"
 
# output acronym
print(fxn(inpt1))
